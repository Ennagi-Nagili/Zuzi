<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sport">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:background="@drawable/ic_back"
        android:layout_alignParentRight="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/sport_recycler"
        android:layout_below="@id/btn_back"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sport_company_recycler"
        android:layout_below="@id/comp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şirkətlər"
        android:id="@+id/comp"
        android:textColor="@color/special"
        android:textStyle="bold"
        android:textSize="42sp"
        android:layout_below="@id/sport_recycler"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/collingar"/>
</RelativeLayout>